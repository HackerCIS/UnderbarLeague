<% if user_signed_in? %>
    <%= current_user.email %> 님 안녕하세요.
    <a href="/users/sign_out" data-method="delete">로그아웃</a>
    <hr>
    <div>
        <table>
            <tr><h1>리그정보를 입력하세요</h1></tr>
            <form action="/leagues/create_league" method="POST">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <tr>
                    <td>리그이름: </td>
                    <td><input type="text" name="league_name"></td>
                </tr>
                <tr>
                    <td>리그종류: </td>
                    <td><input type="text" name="league_type"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><button type="submit">리그생성</button></td>   
                </tr>
            </form>
        </table>
    </div>
    
<% else %>
    <a href="/users/sign_in">로그인</a>
<% end %>
<hr>


<% if user_signed_in? %>
    <%= current_user.email %> 님 안녕하세요.
    <a href="/users/sign_out" data-method="delete">로그아웃</a>
    <hr>
    <%= current_user.email %>님의 리그페이지<br>

    <hr>
    <table border="1px">
        <tr>
            <td width="250">
                본인이 생성한 리그
            </td width="250">
            <td>
                본인이 가입한 리그
            </td>
        </tr>
        <tr>
            <td>
                <% current_user.leagues.each do |league| %>
                    리그명: <%= league.league_name %> <br>
                    리그종류: <%= league.league_type %> <br>
                    <a href="/leagues/show_league/<%= league.id %>">리그상세보기</a>
                    <hr>
                <% end %>
            </td>
            <td>
                <% current_user.joined_leagues.each do |league| %>
                    리그명: <%= league.league_name %> <br>
                    리그종류: <%= league.league_type %> <br>
                    <a href="/leagues/show_league/<%= league.id %>">리그상세보기</a>
                    <hr>
                <% end %>
            </td>
        </tr>
        <tr>
            <td>
                <a href="/leagues/new_league">신규리그생성하기</a>
            </td>
            <td>
                <form action="" method="POST">
                    <input type="text" name="" placeholder="소속리그코드">
                    <button type="summit">리그가입하기</button>
                </form>
                <a href="/joinleagues/create">(임시)소속리그 설정</a><br>
                <a href="/team_members/join">(임시)소속 팀 설정</a>
            </td>
        </tr>
    </table>
    <hr>
    
    
    
<%else %>
    <a href="/users/sign_in">로그인</a>
    <hr>
<% end %>




    
